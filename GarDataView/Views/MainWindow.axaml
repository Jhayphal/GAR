<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GarDataView.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GarDataView.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="GarDataView">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <ScrollViewer>
        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,*" Margin="10">
            <TextBlock Text="GAR path:" VerticalAlignment="Center" Margin="5"/>
            <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding FolderPath}" VerticalAlignment="Stretch"/>
            <WrapPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="5">
                <Button Content="Load address objects to DB" Command="{Binding InsertAddressObjects}"/>
                <Button Content="Load relations to DB" Command="{Binding InsertItemRelations}"/>
            </WrapPanel>
        </Grid>
    </ScrollViewer>
</Window>
